{
	"compilerOptions": {
		"target": "ES2019",
		"module": "NodeNext",
		"outDir": "dist/server",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "nodenext"
	},
	"include": ["src/**/*.ts", "src/client/**/*.svelte"]
}
